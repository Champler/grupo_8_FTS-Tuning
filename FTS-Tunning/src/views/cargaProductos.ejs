<body>
    <!-----------------------------------                Header              ------------------------------------------->
    <%- include('partials/adminHeader.ejs')  %>
    
    <!----------------------------------------  Carga de Productos  --------------------------------------------------------->
    <main>
        <h2 class="title">Formulario de Carga de Productos</h2>
        <form action="" class="form">
            <div class="categoryNPrice">
                <div class="category">
                    <label for="category" class="label">Categoría:</label>
                    <select name="category" id="" class="select border">
                        <option value="frenos">Frenos</option>
                        <option value="neumaticos">Neumáticos</option>
                        <option value="escapes">Escapes</option>
                        <option value="motores">Motores</option>
                        <option value="volantes">Volantes</option>
                        <option value="interiores">Interiores</option>
                    </select>
                </div>
                <div class="pricef">
                    <label for="price" class="label">Precio:</label>
                    <input type="text" name="price" id="" class="price-input border">

                </div>
            </div>
            <div class="nameModelYear">
                <label for="name" class="label">Nombre del Producto:</label>
                <input type="text" name="name" id="" class="name border">
            </div>
            <div class="brandModelYear">
                <div class="brand">
                    <label for="brand" class="label">Marca</label>
                    <input type="text" name="brand" id="" class="select border">
                    <!-- <select name="brand" id="brand" class="select border">

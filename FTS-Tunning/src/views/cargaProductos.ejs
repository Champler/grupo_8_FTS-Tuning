                        <option value="bmw">BMW</option>
                        <option value="audi">Audi</option>
                        <option value="nissan">Nissan</option>
                        <option value="other">otra</option>
                    </select> -->
                </div>
                <div>
                    <label for="model" class="label">Modelo:</label>
                    <input type="text" name="model" id="" class="select border">
                </div>
                <div>
                    <label for="year" class="label">Año:</label>
                    <select name="year" id="" class="border">
                        <option value="2021">2021</option>
                        <option value="2020">2020</option>
                        <option value="2019">2019</option>
                        <option value="2018">2018</option>
                        <option value="2017">2017</option>
                        <option value="2016">2016</option>
                        <option value="2015">2015</option>
                        <option value="2014">2014</option>
                        <option value="2013">2013</option>
                        <option value="2012">2012</option>
                        <option value="2011">2011</option>
                        <option value="2010">2010</option>
                        <option value="2009">2009</option>
                        <option value="2008">2008</option>
                        <option value="2007">2007</option>
                        <option value="2006">2006</option>
                        <option value="2005">2005</option>
                        <option value="2004">2004</option>
                        <option value="2003">2003</option>
                        <option value="2002">2002</option>
                        <option value="2001">2001</option>
                        <option value="2000">2000</option>
                        <option value="1999">1999</option>
                    </select>
                </div>
            </div>
            <div class="photo">
                <label for="photo" class="label">Foto:</label>
                <input type="file" name="photo" id="" class="border ">
                <button class="buttons button-blue">Agregar otra Foto</button>
            </div>
            <div class="description">
                <label for="description" class="label">Descripción:</label>
                <textarea name="description" id="" class="textarea-description border"></textarea>
            </div>
            <div class="colorDelIzq">
                <div>
                    <label for="color" class="label">Color:</label>
                    <select name="color" id="" class="border">
                        <option value="Blanco">Blanco</option>
                        <option value="Negro">Negro</option>
                        <option value="Azul">Azul</option>
                        <option value="Rojo">Rojo</option>
                        <option value="Verde">Verde</option>
                        <option value="Plateado">Plateado</option>
                    </select>
                </div>
                <div>
                    <label for="delTrasNo" class="label">Del/Tras/No:</label>
                    <select name="delTasNo" id="" class="border">
                        <option value="no">No</option>
                        <option value="Delantero">Delantero</option>
                        <option value="Trasero">Trasero</option>
                    </select>
                </div>
                <div>
                    <label for="izqDerNo" class="label">Izq/Der/No:</label>
                    <select name="izqDerNo" id="" class="border">
                        <option value="no">No</option>
                        <option value="Izquierdo">Izquierda</option>
                        <option value="Derecho">Derecha</option>
                    </select>
                </div>
            </div>
            
            <div class="buttons-box">
                <button type="submit" class="buttons button-red">Agregar</button>
            </div>
        </form>

<!DOCTYPE html>
<html lang="es">
    <%- include('partials/head.ejs')  %> 
<body>
    <!-----------------------------------                Header              ------------------------------------------->
    <% if (session.user && session.user.rol == "admin") { %>                   
        <%- include('partials/adminHeader.ejs')  %>
    <% } else { %>
      <%- include('partials/header.ejs')  %> 
    <% }%>


    <!-----------------------------------        Deltalle del Producto       ------------------------------------------->
    <main class="pd-main-product">
        
        <h1 class="pd-title-product"><%= product.name %>  </h1>
        <section class="pd-destacado">
            <article class="pd-photo-n-price">
                <div class="pd-images-container">
                    <div class="pd-thumbnailImages">
                        <% product.images.forEach(image => { %>
                            <img src="/images/productos/<%- image.name%>" alt="Imagen de producto" class="pd-smallImg" onclick="myFunction(this);">
                        <% }) %>
                    </div>
                    <div class="pd-mainImage">
                        <img src="/images/productos/<%= product.images[0].name%>" alt="Imagen de producto" class="pd-bigImg" id="expandedImg">
                    </div>
                </div>

                <div class="pd-price-purchase">
                    <h3 class="pd-the-price">Precio: <%= product.price %></h3>
                    <p class="pd-fees">12 cuotas de <%= Math.round(product.price / 12 * 100) / 100 %></p>
                    <p class="pd-fees">18 cuotas de <%= Math.round(product.price / 18 * 100) / 100 %></p>
                    <p class="pd-fees">24 cuotas de <%= Math.round(product.price / 24 * 100) / 100 %></p>
                    <div class="pd-credit">
                        <i class="fab fa-cc-visa credit"></i>
                        <i class="fab fa-cc-mastercard credit"></i>
                        <i class="fab fa-cc-amex credit"></i>
                        <i class="fab fa-cc-paypal credit"></i>
                    </div>
                    <div>
                        <span class="pd-fees">Cantidad: </span>
                        <input type="number" value="1" min="0" max="15" class="pd-quantity-field" />
                    </div>
                    
                    <a href="/Productos/Carrito"><button type="submit" class="button button-purchase">Comprar</button></a>
                    <a href="/Productos"><button type="submit" class="button button-add-to-cart">Agregar al Carrito</button></a>
                </div>
            </article>
            <% texto.forEach(parrafo => { %>
                <p class="pd-paragraph"><%- parrafo %> </p>
            <% }) %>                                            <!-- Muestra los párrafos separdos previamente con let texto = producto.description.split('\r\n') -->
            <div class="pd-product-details">
                <img class="pd-img-product-2" src="/images/productos/<%= product.images[0].name %>" alt="Escape Chevrolet Corsa 2">
                <ul class="pd-description-list">
                    <p class="pd-product-caracteristics">Características:</p>
                    <li>Nombre:  <%= product.name %></li>
                    <li>Marca:  <%= product.brand %></li>
                    <li>Modelo: <%- product.carModel %></li>
                    <li>Año: <%- product.year %></li>
                    <% if (product.color != "no") { %>
                        <li>Color: <%= product.color %> </li>
                    <% } %>
                    
                </ul>
            </div>
          
        </section>
        <!-- Sugestions -->
        <h3 class="pd-sugestions"><%= sliderTitle %></h3>
         
    </main>

    <!-- /* Slider */ -->  
    <%- include('partials/slider.ejs') %>
    <!-----------------------------------           Footer            ------------------------------------------->
    <%- include('partials/footer.ejs')  %> 

    <!-- JavaScript -->
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    <script src="/javascripts/product-slider.js"></script>
    <script src="/javascripts/productoDetalle.js"></script>
    
</body>
</html>
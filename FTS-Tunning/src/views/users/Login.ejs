<!DOCTYPE html>
<html lang="es"></html>
    <%- include('../partials/head.ejs')  %> 

<body class="login">
    <header>
        <!-- Container izquierdo -->
        <div class="left-container">
            <a href="/"><img src="/images/header/Logo.jpeg" alt="Logo"></a>
            
        </div>
    </header>
  <main class="login-main">  
    <div class="container">
        <div class="row">
            
            
            <div class="card">
                <form class="box" action="/users/login" method="POST" class="form-ad">
                    <input class="buttom-form" type="email" name="email" placeholder="email">
                    <% if (locals.errors && errors.email) { %>
                        <small class="text-danger"><%= errors.email.msg %> </small>
                    <% } %>
                   
                    <input class="buttom-form" type="password" name="password" placeholder="Password">
                    <% if (locals.errors && errors.pass) { %>
                        <small class="text-danger"><%= errors.pass.msg %> </small>
                    <% } %>

                    <label><input type="checkbox" id="cbox1" value="first_checkbox">Recordarme la proxima vez</label><br>
                    <input class="buttom-submit" type="submit" name="remember" value="Iniciar sesión" href="#">
                        
                    <% if (locals.errorMsg ) { %>
                        <small class="text-danger"><%= errorMsg %> </small>
                     <% } %>

                    <span><a href="">¿Olvidaste tu contraseña?</a></span>
                    <span><a href="register">Aún no tengo cuenta</a></span>
                    
                </form>
            </div>
                                                                     
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs')  %> 

<script src="/js/loginFrontValidations.js"></script>
</body>

</html>
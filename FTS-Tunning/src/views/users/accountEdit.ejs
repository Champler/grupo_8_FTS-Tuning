<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs')  %> 
</head>

<body>
 
  <%- include('../partials/header.ejs')  %> 

  <div class="mainEdit" >
   <!-- PERFIL PARA AGREGAR DATOS -->
    <form action="/users/profile?_method=PUT" method="POST">
        <div class="formulario">
        <!-- 1.Datos Personales -->
        <div class="datos-Personales-Edit">
          <h2>Datos Personales</h2>
          <hr>
          <label for="name"><b>Nombre</b></label>
          <input type="text" placeholder="Nombre " name="firstName" id="name" value="<%- user.firstName %>">
          <label for="name"><b>Apellido</b></label>
          <input type="text" placeholder="Apellido" name="lastName" id="name" value="<%- user.lastName %>">
      <br>
      
          <label for="email"><b>Email</b></label>
          <input type="email" placeholder="Ingrese su Email" disabled name="email" id="email" value="<%- user.email %>" >
    <br>
    <img class="Profile" src="/images/users/<%- user.image %> " alt="">
    <br>
          <label for="Perfil"><b>Cambiar foto de Perfil</b></label>
          <input class="File" type="file" name="Perfil" accept="jpg">
    
          <hr>
        </div>

        <!-- Datos de envio -->
        <div class="entrega">
            <h2>Datos de envio</h2>
            <hr>
            <label for="Dirrecion"><b>Dirrecion</b></label>
            <input type="text" placeholder="Direccion" name="address" id="name" value="<%- user.address %>">
        <br>
            <label for="Numero"><b>C.Postal</b></label>
            <input type="number" placeholder="Codigo Postal" name="cp" id="Numero"value="<%- user.cp %>">
      
            <label for="name"><b>Provincia</b></label>
            <input type="text" placeholder="Provincia" name="provincia" id="provincia" value="<%- user.provincia %>">
        <br>
            <label for="name"><b>Localidad</b></label>
            <input type="text" placeholder="Localidad" name="localidad" id="name" value="<%- user.localidad %>">
            <hr>
          </div>
        </div>
          <button type='submit' class="checkout-cta-Edit">Editar</button><br>

      </form>







  


    

      
       
      </div>
   
  </div>
 
  
  

   
  </section>
  
  
   <%- include('../partials/footer.ejs')  %> 
</body>
</html>
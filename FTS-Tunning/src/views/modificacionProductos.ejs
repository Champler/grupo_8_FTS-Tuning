    <!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs')  %> 
<body>
    <!-----------------------------------                Header              ------------------------------------------->
    <%- include('partials/adminHeader.ejs')  %>
    
    <!----------------------------------------  Carga de Productos  --------------------------------------------------------->
    <main>
        <h2 class="title-fcm">Formulario de Modificación de Productos</h2>
        <form action="/adminProductos/editarProducto/<%= producto.id %>?_method=PUT"  method="POST" class="form-fcm" enctype="multipart/form-data">
            <div class="categoryNPrice-fcm">
                <div class="category-fcm">
                    <label for="category" class="label-fcm">Categoría:</label>
                    <select name="category" id="" class="select-fcm border-fcm">
                        <% categories.forEach(category => { %>
                            <option value=<%= category.id %> <%= locals.old && old.category == category ? "selected" : producto.category_id === category.id ? "selected" : "" %>><%= category.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="pricef-fcm">
                    <label for="price" class="label-fcm">Precio:</label>
                    <input type="text" name="price" id="" class="price-input-fcm border-fcm" value="<%= locals.old ? old.price : producto.price %>">
                    <% if (locals.errors && errors.price) { %>
                        <small class="small-red"><%= errors.price.msg %></small>
                    <% } %>
                </div>
                <div class="pricef-fcm">
                    <label for="discount" class="label-fcm">Descuento:</label>
                    <input type="text" name="discount" id="" class="discount-input-fcm border-fcm" value="<%= locals.old ? old.discount : producto.discount %>">
                </div>
            </div>
            <div class="nameModelYear-fcm">
                <label for="name" class="label-fcm">Nombre del Producto:</label>
                <input type="text" name="name" id="" class="name-fcm border-fcm" value="<%= locals.old ? old.name : producto.name %>">
                <% if (locals.errors && errors.name) { %>
                    <small class="small-red"><%= errors.name.msg %></small>
                <% } %>
            </div>
            <div class="brandModelYear-fcm">
                <div class="brand-fcm">
                    <label for="brand" class="label-fcm">Marca: </label>
                    <input type="text" name="brand" id="" class="select-fcm border-fcm" value="<%= locals.old ? old.brand : producto.brand %>">
                    <% if (locals.errors && errors.brand) { %>
                        <small class="small-red"><%= errors.brand.msg %></small>
                    <% } %>
                </div>
                <div>
                    <label for="carModel" class="label-fcm">Modelo:</label>
                    <input type="text" name="carModel" id="" class="select-fcm border-fcm" value="<%= locals.old ? old.carModel : producto.carModel %>">
                    <% if (locals.errors && errors.carModel) { %>
                        <small class="small-red"><%= errors.carModel.msg %></small>
                    <% } %>
                </div>
                <div>
                    <label for="year" class="label-fcm">Año:</label>
                    <select name="year" id="" class="border-fcm">
                        <% for( let year = 2021; year > 1959; year-- ) { %>
                            <option value=<%= year %> <%= locals.old && old.year == year ? "selected" : producto.year == year ? "selected" : "" %>><%= year %> </option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="photoFormulary-fcm">
                <label for="img" class="label-fcm">Foto:</label>
                <input type="file" name="img" id="" class="border-fcm" multiple>
            </div>
            <div class="description-fcm">
                <label for="description" class="label-fcm">Descripción:</label>
                <textarea name="description" id="" class="textarea-description-fcm border-fcm"><%= locals.old ? old.description : producto.description %></textarea>
                <% if (locals.errors && errors.description) { %>
                    <small class="small-red"><%= errors.description.msg %></small>
                <% } %>
            </div>
            <div class="colorDelIzq-fcm">
                <div>
                    <label for="color" class="label-fcm">Color:</label>
                    <select name="color" id="" class="border-fcm">
                        <% let colors = ["no","Blanco","Negro","Azul","Rojo","Verde","Plateado"] %> 
                        <% colors.forEach(color => { %>
                            <option value=<%= color %>  <%= locals.old && old.color == color ? "selected" : producto.color === color ? "selected" : "" %>><%= color %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            
            <div class="buttons-box-fcm">
                <button type="submit" class="buttons-fcm button-red-fcm">Editar</button>
            </div>
        </form>
    </main>


    <!-----------------------------------           Footer            ------------------------------------------->
     <%- include('partials/footer.ejs')  %> 
    
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs')  %>
</head>
<body>
    <%- include('partials/adminHeader.ejs')  %>
    <main class="allProds">
        <div class="search-prod">
            <form action="/adminProductos/search">
                <input type="search" placeholder="Busca tu producto" name="searchAllProds">
            </form>
        </div>
        <a href="/adminProductos/cargaProducto"><button>Agregar</button></a>
        <section class="admin-prods">
            <% if (products.length != 0) { %>                   
                <% products.forEach(product => { %>
                    <article class="admin-each-product">
                        <div>
                            <a href="/Productos/<%- product.id %>">
                                <img src="/images/productos/<%- product.images[0].name %>" alt="">
                            </a>
                            <a href="/Productos/<%- product.id %>">
                                <h3><%= product.name %></h3>
                            </a>
                            <a href="/Productos/<%- product.id %>">    
                                <p class="prod-prod-price">$<%= product.price %></p>
                            </a>
                            <div class="edit-delete">
                                <a href="/adminProductos/editarProducto/<%- product.id %>"><button>Editar</button></a>
                                <form action="/adminProductos/eliminarProducto/<%- product.id %>?_method=DELETE" method="post">
                                    <button type="submit" class="delete-prod">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </article>
                    <% }) %>    
            <% } else { %>
                <article class="prod-not-found">       
                    <h2>El producto que estas buscando no lo tenemos por el momento,</h2> <h2>Â¡Pero lo podes agregar a la base de datos cuando quieras!</h2>
                    <img src="/images/art-not-found.png" alt="" style="width: 500px; height: 500px;">
                </article> 
            <% }%>
            <!-- -->

                        
            </section>
        </main>
    </body>
    </html>
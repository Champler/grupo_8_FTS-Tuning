<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs')  %>
</head>
<body>
    <%- include('partials/adminHeader.ejs')  %>
    <main class="allProds">
        <div class="search-prod">
            <form action="">
                <input type="search" placeholder="Busca tu producto" name="search-all-prods">
            </form>
        </div>
        <a href="http://localhost:3000/adminProductos/cargaProducto"><button>Agregar</button></a>
        <section class="admin-prods">
            <% products.forEach(product => { %>
                <article class="admin-each-product">
                    <div>
                        <img src="/images/productos/<%- product.img[0] %>" alt="">
                        <h3><%= product.name %></h3>
                        <p class="prod-prod-price">$<%= product.price %></p>
                        <div class="edit-delete">
                            <a href="http://localhost:3000/adminProductos/editarProducto/<%- product.id %>"><button>Editar</button></a>
                            <form action="http://localhost:3000/adminProductos/eliminarProducto/<%- product.id %>?_method=DELETE" method="post">
                                <button type="submit">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </article>
                <% }) %>                
            </section>
        </main>
    </body>
    </html>